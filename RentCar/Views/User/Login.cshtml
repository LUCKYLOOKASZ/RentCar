@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<h2>Login</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<form asp-action="Login" method="post">
    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" class="form-control" width="30%" required />
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" class="form-control" width="30%" required />
    </div>
    <button type="submit" class="btn btn-success">Login</button>
    <a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
</form> 
